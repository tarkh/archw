#
# ArchW
# GLOBAL patch settings
#

# !!! ATTENTION !!!
# ==========================================
# Disable boolean options by commenting them
# out of the line, NOT setting FALSE value
# ==========================================

#
#
# CUSTOM SOFTWARE
# add whitespace separated list of
# official / aur packages to install
# ==========================================
#
#S_CUSTOMSOFT=""
#S_CUSTOMSOFT_AUR=""

#
#
# SYSTEM SETTINGS
# ==========================================
#
#

# Various additional system tune
S_SYS_ADDITIONALTUNE=true

# Run display manager no specific tty
S_SYS_TTY=7

# Disable power button
S_SYS_IGNORE_PWR=true

# i3status time format
# Default is 24 hours
# options:
# 1. 24
# 2. 12 (12hr PM/AM mode)
S_I3_STATUS_TIMEFORMAT=24

# i3 lang switch key combo
# (Control|Shift|(win|alt)!=S_I3_MODE_KEY)+any other key
S_KEYMAP_SW_COMBO="Control+space"

#
#
# GRAPHICS AND DISPLAY
# ==========================================
#

# Graphical server
# options:
# 1. xorg (xorg + i3wm)
# 2. (NOT AVAILABLE YET!) wayland (wayland + sway)
S_GS=xorg

# Picom
# Experimental backends with Kawase blur
#S_PICOM_EXP_BACK=true

# i3 mode key (win|alt)
S_I3_MODE_KEY=win

# i3 menu rofi
S_ADD_ROFI=true

# Monitor night shift
S_ADD_REDSHIFT=true

# Backlight monitor/keyboard
#S_ADD_ACPILIGHT=true

#
#
# AUTO SERVICES
# ==========================================
#

# Enable autologin
#S_AUTOLOGIN=true
#S_AUTOLOGIN_TIMEOUT=0

#
#
# SYSTEM SOFTWARE
# ==========================================
#

# Man pages
S_ADD_MAN=true

# Install vm tools
# Avaliable options:
# 1: vmware
# 2: parallels-postinstall (manual post-install)
# 3: parallels-16.1.2.patched
# 4: parallels-16.5.0.patched
# Remove value to disable
# Warning: for Parallels Tools patched
# versions linux-lts is recommended
#S_VM_TOOLS="vmware"

# Polkit (policy kit + gui prompt)
S_ADD_POLKIT=true

# NetworkManager
S_ADD_NETWORKMANAGER=true

# Terminator
# TERM emulator, preconfigured for ArchW.
# Do not disable, or you will have to manually
# install TERM emulator from tty text console
S_ADD_TERMINATOR=true
# If you prefer another terminal app, then
# change it's binary name below
S_SYSTEM_TERMINAL=terminator

# Time sync
S_ADD_NTP=true

# Grub
# Avaliable options:
# 1: text (verbose text booting, will not work with S_ADD_GRUBSILENT)
# 2: menu (show menu, no text while booting)
# 3: silent (show menu only if ESC pressed, or SHIFT with S_ADD_GRUBSILENT)
S_ADD_GRUBCFG=silent
# Grub silent
# Install patched grub version (deprecated)
S_ADD_GRUBSILENT=true

#
# Grub-btrfs
# (if btrfs was selected)
S_ADD_GRUBBTRFS=true

# Plymouth
#S_ADD_PLYMOUTH=true

# Power management
#S_ADD_TLP=true

# Timeshif (snapshots and backup)
S_ADD_TIMESHIFT=true

# Btop system monitor
S_ADD_BTOP=true

# Key service
S_ADD_SXHKD=true

# Trackpad
S_ADD_MTRACK=true

#
# Libinput general
S_ADD_LIBINPUT=true

# Mouse wheel
#S_ADD_IMWHEEL=true

# Notification server
S_ADD_DUNST=true

# File managers
# Nemo file browser
S_ADD_NEMO=true
# Nemo network file sharing
S_ADD_NEMO_SHARE=true
# Midnight Commander file browser
S_ADD_MC=true
# System default file manager
# Avaliable options:
# 1. mc
# 2. nemo
S_SYSTEM_FM=nemo

# Screen capture
S_FLAMESHOT=true

# Image viewer
S_ADD_GPICVIEW=true

# Bluetooth extra codecs
# SBC, AAC, aptX, aptX HD, LDAC
S_ADD_BTEXTRA=true
# Disable avrcp
# Sometimes may help to increase max vol on
# Apple AirPods, but will disable external
# control abilities
#S_ADD_BTEXTRA_AVRCP_OFF=true

# IOS device support
S_ADD_IOS=true

# Moc cli audio player
S_ADD_MOC=true

# Mpv video player
S_ADD_MPV=true

# Firefox
S_ADD_FF=true
# Enable XINPUT2
#S_ADD_FF_XINPUT=true
# Enable hardware video acceleration with VA-API
S_ADD_FF_VAAPI=true

# Gedit text editor
S_ADD_GEDIT=true
