#!/bin/bash

#
# ArchW by tarkh (c) 2021
#

#
# Get config path
if ! CONFIGPATH=$(archw --sys pathconf "xprof.conf"); then
  echo "Can't find config"
  exit 1
fi

#
# Load config
. $CONFIGPATH

#
# Set QT platform theme
export QT_QPA_PLATFORMTHEME="qt5ct"
export XDG_CURRENT_DESKTOP="GNOME"

#
# Enable one-to-one trackpad scrolling
export MOZ_USE_XINPUT2=1

"$@"
